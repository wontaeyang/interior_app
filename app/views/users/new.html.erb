<!-- Sub-title for the nav -->
<% provide(:title, '// Sign up') %>



<div class="row">
  <div class="span6 offset3">
    <h1 class="center top-offset">Sign Up</h1>
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder:"Your ShoP initial" %>

    <%= f.label :email %>
    <%= f.text_field :email, placeholder:"Work e-mail" %>

    <%= f.label :password %>
    <%= f.password_field :password, placeholder:"Password" %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, placeholder:"Confirm password" %>

    <%= f.submit "Create my account", class: "btn btn-large btn-custom" %>

    <% end %>
  </div>
</div>