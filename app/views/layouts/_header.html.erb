<header class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">


   <a class="brand" href="<%= root_url %>">
    <strong>
      SHoP
    </strong>
    <span class="idg">
      <%= yield :title %>
    </span>
  </a>
  

  <!--  <div class="nav-collapse collapse"> -->
  <ul class="nav pull-right">
    <% if current_user %>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
       <span><i class="icon-user visible-phone"></i>
         <span class="hidden-phone"> Welcome, </span></span>
         <%= current_user.email.upcase.split("@").first %>
         <b class="caret white-caret"></b>
       </a>
       <ul class="dropdown-menu">
        <li>
          <%= link_to "Edit Profile", edit_profile_path %>
        </li>
        <li>
          <%= link_to "Settings", '#' %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to "Sign out", signout_path, method: "delete"%>
        </li>
      </ul>
    </li>
    <% else %>
    <li>
      <%= link_to "Sign Up", signup_path %>
    </li>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Sign In
        <b class="caret white-caret"></b>
      </a>
      <ul class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
        <%= form_tag sessions_path do %>
        <%= label_tag :username %>
        <%= text_field_tag :username %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= check_box_tag :remember_me, 1, params[:remember_me], :style => "float: left;" %>
        <%= label_tag :remember_me %>
        

        <%= submit_tag "Sign in", class: "btn btn-custom" %>
        <% end %>
      </ul>
    </li>
    <% end %>
  </ul>



  
</div>
</header>
