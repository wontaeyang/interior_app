<!-- Sub-title for the nav -->
<% content_for :title do %>
<span class="hidden-phone">// Interiors Weekly</span>
<span class="visible-phone">// Weekly</span>
<% end %>

<!-- content -->

<div class="center title">
	<h1 class="hidden-phone">// Interiors Weekly</h1>
	<h1 class="visible-phone">// Weekly</h1>
</div>


<!-- Button to trigger modal -->
<i class="icon-plus"></i><a href="#myModal" data-toggle="modal">Add New Project</a>


<!-- Project listing starts here -->
<div class="project-list">

	<% @projects.each do |p| %>

	
	
	<div class="projects">
		<h2>/ <%= p.project_name.upcase %> 
			<span class="project-links pull-right" >
				<i class="icon-pencil"></i>
				<%= link_to 'Edit', edit_weekly_path(p.id) %>
				<i class="icon-remove"></i>
				<%= link_to "Delete", project_path(p), method: "delete"%>
			</span>
		</h2>
		
	</div>

	<% if p.tasks.any? %>
	<div class="task-list">
		<h5>Active Tasks (<%= p.tasks.where(:status => true).count %>)</h5>
		<ol class="tasks">
			<% p.tasks.each do |t| %>
			<% if t.status == true %>
				<span>
					<h5> 
						<i class="icon-circle shopgreen left"></i> <%= t.description %>
					</h5>
				</span>
			<% end %>
			<% end %>
			</ol>
			<h5>Inactive Tasks (<%= p.tasks.where(:status => false).count %>)</h5>
			<ol class="tasks">
			<% p.tasks.each do |t| %>
				<% if t.status == false %>
				<span>
					<h5>
						<i class="icon-circle-blank left"></i> <%= t.description %>
					</h5>
				</span>
			<% end %>
			<% end %>
		</ol>
	</div>
	<% end %>

	<% end %>



</div>

<!-- modal -->

<%= render 'layouts/modal' %>
